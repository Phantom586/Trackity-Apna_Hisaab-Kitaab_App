<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:id="@+id/mehi_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_bg1"
        android:layout_marginBottom="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mehi_exp_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:fontFamily="@font/fira_mono_medium"
                android:textColor="@color/text_color_3"
                android:text="Electronics/Milk"/>

            <ImageView
                android:id="@+id/mehi_delete_exp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="11dp"
                app:tint="@color/text_color_3"
                android:src="@drawable/ic_close_icon"/>

        </TableRow>

    </TableLayout>

