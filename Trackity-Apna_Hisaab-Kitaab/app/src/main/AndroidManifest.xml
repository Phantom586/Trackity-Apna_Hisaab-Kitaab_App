<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.freemind_technologies.trackity_apna_hisaab_kitaab_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trackity_Apna_HisaabKitaab_App"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.UpdateApp"></activity>
        <activity
            android:name=".views.Localization"
            android:configChanges="locale" />
        <activity android:name=".views.ExpenseSummary" />
        <activity android:name=".views.ManageExpenseTypes" />
        <activity android:name=".views.ExpenseDetails" />
        <activity android:name=".views.SubHeaderExpenses" />
        <activity android:name=".views.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>